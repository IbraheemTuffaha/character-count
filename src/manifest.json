{
  "manifest_version": 2,

  "name": "Line Length",
  "description": "Measure line lengths.",
  "version": "0.0.1",

  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "browser_action": {
    "default_title": "Show line lengths",
    "default_icon": {
      "19": "icons/inactive-19.png",
      "38": "icons/inactive-38.png"
    }
  },

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "bower_components/jquery/dist/jquery.min.js",
        "content.js"
      ]
    }
  ],

  "icons": {
    "16": "icons/active-16.png",
    "48": "icons/active-48.png",
    "128": "icons/active-128.png"
  }
}
